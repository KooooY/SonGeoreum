pipeline {

    agent any

    stages {

        stage('Build') {
            steps {
                sh "chmod +x -R ${env.WORKSPACE}"
                sh './jenkins/build/build.sh'

            }
        }

        stage('Deploy') {
            steps {
                sh "chmod +x -R ${env.WORKSPACE}"
                sh './jenkins/deploy/deploy.sh'
            }
        }
    }
}